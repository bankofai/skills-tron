{
    "mainnet": {
        "smartRouter": {
            "address": "TGnC7LMji8hBpyvZt1TTEJhVpAZ5HFyJ3r",
            "name": "SunSwap Smart Router",
            "description": "Multi-version router supporting V1, V2, V3, PSM, and Curve pools",
            "apiEndpoint": "https://rot.endjgfsv.link/swap/router"
        }
    },
    "nile": {
        "smartRouter": {
            "address": "TMEkn7zwGJvJsRoEkiTKfGRGZS2yMdVmu3",
            "name": "SunSwap Smart Router (Nile)",
            "description": "Multi-version router on Nile testnet",
            "apiEndpoint": "https://tnrouter.endjgfsv.link/swap/router"
        }
    },
    "abi": {
        "swapExactInput": {
            "inputs": [
                {
                    "name": "path",
                    "type": "address[]"
                },
                {
                    "name": "poolVersion",
                    "type": "string[]"
                },
                {
                    "name": "versionLen",
                    "type": "uint256[]"
                },
                {
                    "name": "fees",
                    "type": "uint24[]"
                },
                {
                    "components": [
                        {
                            "name": "amountIn",
                            "type": "uint256"
                        },
                        {
                            "name": "amountOutMin",
                            "type": "uint256"
                        },
                        {
                            "name": "to",
                            "type": "address"
                        },
                        {
                            "name": "deadline",
                            "type": "uint256"
                        }
                    ],
                    "name": "data",
                    "type": "tuple"
                }
            ],
            "name": "swapExactInput",
            "outputs": [
                {
                    "name": "amountsOut",
                    "type": "uint256[]"
                }
            ],
            "stateMutability": "payable",
            "type": "function"
        },
        "allowance": {
            "inputs": [
                {
                    "name": "owner",
                    "type": "address"
                },
                {
                    "name": "spender",
                    "type": "address"
                }
            ],
            "name": "allowance",
            "outputs": [
                {
                    "name": "",
                    "type": "uint256"
                }
            ],
            "stateMutability": "view",
            "type": "function"
        },
        "balanceOf": {
            "inputs": [
                {
                    "name": "account",
                    "type": "address"
                }
            ],
            "name": "balanceOf",
            "outputs": [
                {
                    "name": "",
                    "type": "uint256"
                }
            ],
            "stateMutability": "view",
            "type": "function"
        },
        "approve": {
            "inputs": [
                {
                    "name": "spender",
                    "type": "address"
                },
                {
                    "name": "amount",
                    "type": "uint256"
                }
            ],
            "name": "approve",
            "outputs": [
                {
                    "name": "",
                    "type": "bool"
                }
            ],
            "stateMutability": "nonpayable",
            "type": "function"
        },
        "multicall": {
            "inputs": [
                {
                    "name": "data",
                    "type": "bytes[]"
                }
            ],
            "name": "multicall",
            "outputs": [
                {
                    "name": "results",
                    "type": "bytes[]"
                }
            ],
            "stateMutability": "payable",
            "type": "function"
        },
        "unwrapWTRX": {
            "inputs": [
                {
                    "name": "amountMinimum",
                    "type": "uint256"
                },
                {
                    "name": "recipient",
                    "type": "address"
                }
            ],
            "name": "unwrapWTRX",
            "stateMutability": "payable",
            "type": "function"
        }
    },
    "notes": {
        "api_usage": "Always use Smart Router API for price quotes, not on-chain getAmountsOut",
        "amountIn_units": "amountIn must be raw integer units (smallest unit), not decimal human units",
        "quote_validation": "Always verify response.data[0].amountIn matches intended human amount before building tx params",
        "pool_versions": "Merge consecutive identical poolVersions. versionLen items must sum to path.length (token count)",
        "poolFees_logic": "poolFees length must equal path.length (do not truncate)",
        "nile_abi": "Nile testnet requires ABI parameter for read_contract and write_contract calls",
        "tuple_format": "swapExactInput data tuple must be positional array [amountIn, amountOutMin, to, deadline], not object",
        "trx_swap": "TRX as input should be passed via transaction value; no token approval needed",
        "slippage": "Recommended: 5-10% for testing, 0.5-2% for production"
    }
}
